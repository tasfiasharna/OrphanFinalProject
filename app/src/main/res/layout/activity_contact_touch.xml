<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactTouchActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sky">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:id="@+id/img_about"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/gallery8" />

                <!--                <ImageView-->
                <!--                    android:id="@+id/img_about"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:scaleType="fitXY"-->
                <!--                    app:srcCompat="@drawable/gallery8" />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/layout1"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="GET IN TOUCH"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />
            </LinearLayout>
            <!--        <LinearLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:orientation="vertical"-->
            <!--            android:layout_marginTop="215dp"-->
            <!--            android:layout_marginLeft="10dp"-->
            <!--            android:layout_marginRight="10dp">-->

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginBottom="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/contact"
                            android:layout_centerInParent="true"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONTACT"
                            android:textSize="16sp"
                            android:layout_below="@+id/imageView1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/btn_contact"
                            android:background="@android:drawable/menuitem_background"/>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/mail"
                            android:layout_centerInParent="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MAILING ADDRESS"
                            android:textSize="16sp"
                            android:layout_below="@+id/imageView2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/btn_mail"
                            android:background="@android:drawable/menuitem_background"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout3"
                android:layout_below="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/touch1"
                        android:textStyle="bold"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:textColor="@android:color/black"
                        android:textSize="26sp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />

                    <TextView
                        android:id="@+id/txt_description"
                        android:layout_below="@+id/txt_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/touch"
                        android:textStyle="normal"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />

                    <TextView
                        android:id="@+id/txt_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/touche"
                        android:textStyle="normal"
                        android:layout_below="@id/txt_description"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:textAppearance="?android:attr/textAppearanceLarge"

                        android:layout_marginTop="30dp"/>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/txt_description"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="8dp"
                        android:background="@android:color/black" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/txt_link"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="8dp"
                        android:background="@android:color/black" />

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout4"
                android:layout_below="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/btn_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout4"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/menuitem_background"
                android:clickable="true"
                android:paddingLeft="10sp">




                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/facebook">

                </ImageView>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/facebook"
                    android:paddingLeft="20dp"
                    android:text="FACEBOOK"
                    android:textAppearance="?android:attr/textAppearanceButton"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/facebook"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:background="@android:color/black" />


            </RelativeLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_below="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout


                android:id="@+id/btn_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_facebook"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/menuitem_background"

                android:clickable="true"
                android:paddingLeft="10sp">

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/instagram">

                </ImageView>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/instagram"
                    android:paddingLeft="20dp"
                    android:text="Instagram"
                    android:textAppearance="?android:attr/textAppearanceButton"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/instagram"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:background="@android:color/black" />
            </RelativeLayout>
        </LinearLayout>
