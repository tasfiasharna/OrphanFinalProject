<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutInfoActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="450dp"
                    android:layout_height="250dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_mission"
                        android:layout_width="450dp"
                        android:layout_height="250dp"
                        android:background="@drawable/gallery9"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="OUR MISSION"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_below="@+id/layout1"
                    android:layout_width="450dp"
                    android:layout_height="250dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_story"
                        android:layout_width="450dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="OUR STORY"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:background="@drawable/gallery1"
                        android:gravity="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_below="@+id/layout2"
                    android:layout_width="450dp"
                    android:layout_height="250dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_approach"
                        android:layout_width="450dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="OUR APPROACH"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:background="@drawable/projects5"
                        android:gravity="center"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

